{
	// See http://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"isShellCommand": true,
  "command": "npm",
	"showOutput": "always",
	"problemMatcher": "$tsc",
  "suppressTaskName": true,
	"tasks": [
    {
      "taskName": "build",
      "isBuildCommand": true,
      "args": ["run", "build"],
      "problemMatcher": "$tsc"
    },
    {
      "taskName": "test",
      "args": ["run", "test"],
      "isTestCommand": true
    }
  ]
}